<UserControl x:Class="FlameEncoder.NodeEditor.Nodes.Controls.MaterialNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlameEncoder.NodeEditor.Nodes.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150" Height="100">
    <Grid>
        <StackPanel Margin="10 0">
            <TextBlock Text="Width:" Foreground="LightGray"/>
            <TextBox Name="widthBox" 
                     Background="#2a2a2a" 
                     Foreground="LightGray" 
                     TextChanged="widthBox_TextChanged" 
                     MouseDown="widthBox_MouseDown"
                     PreviewTextInput="widthBox_PreviewTextInput"/>
            
            <TextBlock Text="Height:" Foreground="LightGray"/>
            <TextBox Name="heightBox" 
                     Background="#2a2a2a" 
                     Foreground="LightGray" 
                     TextChanged="heightBox_TextChanged" 
                     MouseDown="heightBox_MouseDown"
                     PreviewTextInput="heightBox_PreviewTextInput"/>
        </StackPanel>
    </Grid>
</UserControl>
